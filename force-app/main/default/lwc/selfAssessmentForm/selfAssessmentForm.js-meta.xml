        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Self_Assessment__c</object>
            </objects>
            <property 
                type="String" 
                default="Self-Assessment Form" 
                required="true" 
                label="Card Title" 
                name="cardTitle" 
            ></property>
            <property 
                type="String" 
                default="custom:custom18" 
                required="true" 
                label="Card Icon Name" 
                name="cardIconName" 
                description="Use supported icons from the SLDS library"
            ></property>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property 
                name="recordId" 
                type="String" 
                label="Record ID" 
                default="{!recordId}" 
                description="For object pages, this value should be {!recordId}. For other pages, set to the name of a url parameter."
            ></property>
            <property 
                type="String" 
                default="Self-Assessment Form" 
                required="true" 
                label="Card Title" 
                name="cardTitle" 
            ></property>
            <property 
                type="String" 
                default="custom:custom18" 
                required="true" 
                label="Card Icon Name" 
                name="cardIconName" 
                description="Use supported icons from the SLDS library"
            ></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>